# ==============================================================================
# EUNACOM PLATFORM - ENVIRONMENT VARIABLES
# ==============================================================================

# ------------------------------------------------------------------------------
# DATABASE
# ------------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/eunacom?schema=public"

# ------------------------------------------------------------------------------
# JWT & AUTH
# ------------------------------------------------------------------------------
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ------------------------------------------------------------------------------
# REDIS
# ------------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ------------------------------------------------------------------------------
# EMAIL
# ------------------------------------------------------------------------------
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="EUNACOM Test <noreply@eunacomtest.cl>"

# ------------------------------------------------------------------------------
# OPENAI (Para generación de preguntas y análisis)
# ------------------------------------------------------------------------------
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"

# ------------------------------------------------------------------------------
# PAYMENT GATEWAY (Flow)
# ------------------------------------------------------------------------------
FLOW_API_KEY="your-flow-api-key"
FLOW_SECRET_KEY="your-flow-secret-key"
FLOW_BASE_URL="https://www.flow.cl/api"

# ------------------------------------------------------------------------------
# GOOGLE ADS API (Marketing Intelligence System)
# ------------------------------------------------------------------------------
# Google Ads Developer Token (obtener de https://ads.google.com/aw/apicenter)
GOOGLE_ADS_DEVELOPER_TOKEN="your-developer-token"

# OAuth2 Credentials (obtener de Google Cloud Console)
GOOGLE_ADS_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_ADS_CLIENT_SECRET="your-client-secret"
GOOGLE_ADS_REFRESH_TOKEN="your-refresh-token"

# ID de cuenta de Google Ads (formato: 123-456-7890)
GOOGLE_ADS_CUSTOMER_ID="123-456-7890"

# Cuenta de administrador (MCC) si aplica
GOOGLE_ADS_LOGIN_CUSTOMER_ID=""

# ------------------------------------------------------------------------------
# GOOGLE ANALYTICS 4 API (Marketing Intelligence System)
# ------------------------------------------------------------------------------
# Property ID de Google Analytics 4
GA4_PROPERTY_ID="123456789"

# Service Account JSON (path al archivo o JSON string)
GOOGLE_SERVICE_ACCOUNT_KEY_PATH="./credentials/google-service-account.json"
# O usar JSON directo:
# GOOGLE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"...","private_key":"..."}'

# ------------------------------------------------------------------------------
# GOOGLE SEARCH CONSOLE API (Marketing Intelligence System)
# ------------------------------------------------------------------------------
# URL del sitio en Search Console
GOOGLE_SEARCH_CONSOLE_SITE_URL="https://eunacomtest.cl"

# ------------------------------------------------------------------------------
# AI ANALYSIS SERVICE (Marketing Intelligence System)
# ------------------------------------------------------------------------------
# Provider: 'openai' o 'anthropic'
AI_ANALYSIS_PROVIDER="openai"

# OpenAI (si provider es 'openai')
AI_ANALYSIS_OPENAI_MODEL="gpt-4-turbo-preview"

# Anthropic (si provider es 'anthropic')
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"
AI_ANALYSIS_ANTHROPIC_MODEL="claude-3-sonnet-20240229"

# ------------------------------------------------------------------------------
# MARKETING DASHBOARD SETTINGS
# ------------------------------------------------------------------------------
# Habilitar/deshabilitar sistema de marketing intelligence
MARKETING_INTELLIGENCE_ENABLED="true"

# Frecuencia de actualización automática (en minutos)
MARKETING_DATA_SYNC_INTERVAL_MINUTES="60"

# Días de datos históricos a mantener
MARKETING_DATA_RETENTION_DAYS="90"

# Límite de conversaciones con AI (para evitar costos excesivos)
AI_CHAT_MAX_MESSAGES_PER_DAY="50"

# ------------------------------------------------------------------------------
# CRON JOBS
# ------------------------------------------------------------------------------
# Habilitar/deshabilitar jobs automáticos
ENABLE_CRON_JOBS="true"

# Horario de recolección de métricas (cron expression)
# Default: cada hora
CRON_COLLECT_METRICS="0 * * * *"

# Horario de análisis AI diario (cron expression)
# Default: 8:00 AM todos los días
CRON_DAILY_AI_ANALYSIS="0 8 * * *"

# Horario de análisis AI semanal (cron expression)
# Default: Lunes 9:00 AM
CRON_WEEKLY_AI_ANALYSIS="0 9 * * 1"

# ------------------------------------------------------------------------------
# APPLICATION
# ------------------------------------------------------------------------------
NODE_ENV="development"
PORT="3001"
FRONTEND_URL="http://localhost:5173"

# ------------------------------------------------------------------------------
# LOGGING
# ------------------------------------------------------------------------------
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"

# ------------------------------------------------------------------------------
# RATE LIMITING
# ------------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
